---
import Logo from '@/components/Logo.astro';
import '@/styles/global.css';

const links = [
  { key: 'our-story', link: '/our-story', label: 'Our Story' },
  // { key: 'gallery', link: '/gallery', label: 'Gallery' },
  { key: 'faq', link: '/faq', label: 'FAQ' },
  { key: 'blog', link: '/blog', label: 'Blog' },
];

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 h-16 bg-white/70 shadow-sm backdrop-blur-md">
  <div class="container mx-auto flex h-full max-w-7xl items-center px-6">
    <div class="flex w-full items-center justify-between">
      <Logo />

      <nav class="flex items-center gap-4">
        {
          links.map((link) => (
            <a
              href={link.link}
              class:list={[
                'text-sm transition-colors hover:text-gray-900',
                currentPath === link.link ? 'font-medium text-gray-900' : 'text-gray-600',
              ]}
            >
              {link.label}
            </a>
          ))
        }
      </nav>
    </div>
  </div>
</header>
