---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';

interface Props {
  id: string;
  title: string;
  description: string;
  publishedDate: Date;
  readingTime: number;
  cover: ImageMetadata;
  coverAlt: string;
}

const { id, title, description, publishedDate, readingTime, cover, coverAlt } = Astro.props;
---

<article
  class="flex h-full flex-col overflow-hidden rounded-lg border border-gray-200 shadow-sm transition-shadow hover:shadow-md"
>
  <a href={`/blog/${id}`} class="block">
    <Image src={cover} alt={coverAlt} class="h-48 w-full bg-black object-cover" />
  </a>

  <div class="flex flex-1 flex-col p-4">
    <a href={`/blog/${id}`} class="group">
      <h3 class="text-xl font-bold transition-colors group-hover:text-red-500">
        {title}
      </h3>
    </a>

    <p class="mt-3 flex-1 text-sm text-gray-600">
      {description}
    </p>

    <div class="mt-4 flex items-center gap-4 text-xs text-gray-500">
      <div class="flex items-center gap-1">
        <Icon name="mdi:calendar" class="h-4 w-4" />
        <span
          >{
            publishedDate.toLocaleDateString('en-US', {
              month: 'long',
              day: 'numeric',
              year: 'numeric',
            })
          }</span
        >
      </div>
      <div class="flex items-center gap-1">
        <Icon name="mdi:clock-outline" class="h-4 w-4" />
        <span>{readingTime} min read</span>
      </div>
    </div>
  </div>
</article>
