---
import { Icon } from 'astro-icon/components';
import Logo from '@/components/Logo.astro';
import '@/styles/global.css';

const currentYear = new Date().getFullYear();
---

<footer id="contact" class="px-6 py-8">
  <div class="container mx-auto max-w-7xl">
    <div class="grid grid-cols-1 gap-8 sm:grid-cols-12">
      <!-- Logo Column -->
      <div class="flex items-start justify-center sm:col-span-4 sm:justify-start">
        <Logo width={120} />
      </div>

      <!-- Content Column -->
      <div class="sm:col-span-8">
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <!-- Visit Us -->
          <div class="text-center sm:text-left">
            <h3 class="mb-3 text-sm font-semibold">Visit Us</h3>
            <p class="text-sm text-gray-600">10 Ang Mo Kio Industrial Park 2A</p>
            <p class="text-sm text-gray-600">#05-05 AMK AutoPoint</p>
            <p class="text-sm text-gray-600">Singapore 568047</p>
          </div>

          <!-- Opening Hours -->
          <div class="text-center sm:text-left">
            <h3 class="mb-3 text-sm font-semibold">Opening Hours</h3>
            <p class="text-sm text-gray-600">Monday-Friday: 9am-6pm</p>
            <p class="text-sm text-gray-600">Saturday: 9am-12pm</p>
            <p class="text-sm text-gray-600">Sunday & Public Holidays: Closed</p>
          </div>

          <!-- Contact Us -->
          <div class="text-center sm:text-left">
            <h3 class="mb-3 text-sm font-semibold">Contact Us</h3>
            <p class="text-sm text-gray-600">
              <a href="tel:91729570" class="underline hover:text-gray-900">9172 9570</a>
              {' / '}
              <a href="tel:87909677" class="underline hover:text-gray-900">8790 9677</a>
            </p>
            <a
              href="mailto:sales@fivestarautoleather.com"
              class="text-sm text-gray-600 underline hover:text-gray-900"
            >
              sales@fivestarautoleather.com
            </a>
          </div>

          <!-- Follow Us -->
          <div class="text-center sm:text-left">
            <h3 class="mb-3 text-sm font-semibold">Follow Us</h3>
            <div class="flex items-center justify-center gap-2 sm:justify-start">
              <a
                href="https://www.facebook.com/fivestarautoleather/"
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-600 transition-colors hover:text-gray-900"
                aria-label="Facebook"
              >
                <Icon name="mdi:facebook" class="h-5 w-5" />
              </a>
              <a
                href="https://www.instagram.com/fivestarautoleather/"
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-600 transition-colors hover:text-gray-900"
                aria-label="Instagram"
              >
                <Icon name="mdi:instagram" class="h-5 w-5" />
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <p class="mt-8 text-center text-sm text-gray-500">
      &copy; <span id="footer-year">{currentYear}</span> Five Star Auto Leather. All rights reserved.
    </p>
  </div>
</footer>

<script is:inline>
  document.getElementById('footer-year').innerText = new Date().getFullYear();
</script>
