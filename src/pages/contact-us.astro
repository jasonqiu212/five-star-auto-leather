---
import BaseLayout from '@/layouts/BaseLayout.astro';
import ParallaxTitle from '@/components/ParallaxTitle.astro';
import { Icon } from 'astro-icon/components';

import ourStoryImage from '@/assets/our-story.jpg';
---

<BaseLayout>
  <Fragment slot="head">
    <title>Contact Us | Five Star Auto Leather</title>
    <meta
      name="description"
      content="Get in touch with Five Star Auto Leather. Visit our Singapore workshop, check our opening hours, or contact us for premium car upholstery services."
    />
  </Fragment>

  <ParallaxTitle backgroundImage={ourStoryImage.src} title="Contact Us" />

  <section class="container mx-auto max-w-7xl px-6 py-8">
    <div class="mb-8 grid grid-cols-1 gap-6 lg:grid-cols-3">
      <div class="flex items-center gap-6 rounded-lg p-4 shadow-md">
        <Icon name="mdi:phone" class="h-8 w-8" />
        <div>
          <h3 class="mb-1 text-sm text-gray-600">Phone</h3>
          <a href="tel:91729570" class="text-sm font-semibold text-gray-900 underline">9172 9570</a>
          {' / '}
          <a href="tel:87909677" class="text-sm font-semibold text-gray-900 underline">8790 9677</a>
        </div>
      </div>

      <div class="flex items-center gap-6 rounded-lg p-4 shadow-md">
        <Icon name="mdi:email" class="h-8 w-8" />
        <div>
          <h3 class="mb-1 text-sm text-gray-600">Email</h3>
          <a
            href="mailto:sales@fivestarautoleather.com"
            class="text-sm font-semibold wrap-anywhere text-gray-900 underline"
            >sales@fivestarautoleather.com</a
          >
        </div>
      </div>

      <div class="flex items-center gap-6 rounded-lg p-4 shadow-md">
        <Icon name="mdi:map-marker" class="h-8 w-8" />
        <div>
          <h3 class="mb-1 text-sm text-gray-600">Address</h3>
          <p class="text-sm font-semibold text-gray-900">10 Ang Mo Kio Industrial Park 2A</p>
          <p class="text-sm font-semibold text-gray-900">#05-05 AMK AutoPoint</p>
          <p class="text-sm font-semibold text-gray-900">Singapore 568047</p>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 items-start gap-6 lg:grid-cols-6">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3988.6660102489027!2d103.8690919!3d1.3770706000000001!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31da1658b06d3b7d%3A0xbb4992fe537bc610!2sFive%20Star%20Auto%20Leather!5e0!3m2!1sen!2ssg!4v1766728446154!5m2!1sen!2ssg"
        width="100%"
        height="100%"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        class="col-span-1 min-h-[300px] w-full rounded-lg lg:col-span-4"></iframe>

      <div class="col-span-1 flex flex-col gap-4 lg:col-span-2">
        <div class="rounded-lg p-6 shadow-lg">
          <div
            class="mb-4 inline-block rounded-full bg-black px-4 py-1 text-xs tracking-wide text-white uppercase"
          >
            Opening Hours
          </div>

          <div class="space-y-4">
            <div>
              <h3 class="mb-1 text-xl font-semibold">Monday - Friday</h3>
              <p>9am - 6pm</p>
            </div>

            <div>
              <h3 class="mb-1 text-xl font-semibold">Saturday</h3>
              <p>9am - 12pm</p>
            </div>

            <div>
              <h3 class="mb-1 text-xl font-semibold">Sunday & Public Holidays</h3>
              <p>Closed</p>
            </div>
          </div>
        </div>
        <div class="rounded-lg p-6 shadow-lg">
          <div
            class="mb-4 inline-block rounded-full bg-black px-4 py-1 text-xs tracking-wide text-white uppercase"
          >
            Follow Us
          </div>

          <div class="flex items-center gap-2">
            <a
              href="https://www.facebook.com/fivestarautoleather/"
              target="_blank"
              rel="noopener noreferrer"
            >
              <Icon name="mdi:facebook" class="h-5 w-5" />
            </a>

            <a
              href="https://www.instagram.com/fivestarautoleather/"
              target="_blank"
              rel="noopener noreferrer"
            >
              <Icon name="mdi:instagram" class="h-5 w-5" />
            </a>

            <a
              href="https://www.carousell.sg/u/fivestarautoleather/"
              target="_blank"
              rel="noopener noreferrer"
            >
              <Icon name="carousell" class="h-5 w-5" />
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <style>
    h2 {
      font-family: 'RacingSansOne', var(--font-sans);
    }
  </style>
</BaseLayout>
