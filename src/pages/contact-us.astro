---
import BaseLayout from '@/layouts/BaseLayout.astro';
import ParallaxTitle from '@/components/ParallaxTitle.astro';

import ourStoryImage from '@/assets/our-story.jpg';
---

<BaseLayout>
  <Fragment slot="head">
    <title>Contact Us | Five Star Auto Leather</title>
    <meta
      name="description"
      content="Five Star Auto Leather has been delivering quality car upholstery in Singapore for 20 years. Learn how it all began."
    />
  </Fragment>

  <ParallaxTitle backgroundImage={ourStoryImage.src} title="Contact Us" />

  <section class="container mx-auto max-w-7xl px-6 py-8">
    <!-- Top Row: Contact Cards -->
    <div class="mb-12 grid grid-cols-1 gap-6 md:grid-cols-3">
      <!-- Email Card -->
      <div class="flex items-center gap-4 rounded-2xl bg-white p-6 shadow-md">
        <div class="flex h-16 w-16 shrink-0 items-center justify-center rounded-2xl bg-orange-100">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-8 w-8 text-orange-600"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            ></path>
          </svg>
        </div>
        <div>
          <h3 class="mb-1 text-sm font-medium text-gray-500">Email</h3>
          <p class="text-sm font-semibold text-gray-900">hello@web100.com</p>
          <p class="text-sm font-semibold text-gray-900">contact@web100.com</p>
        </div>
      </div>

      <!-- Phone Card -->
      <div class="flex items-center gap-4 rounded-2xl bg-white p-6 shadow-md">
        <div class="flex h-16 w-16 shrink-0 items-center justify-center rounded-2xl bg-orange-100">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-8 w-8 text-orange-600"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
            ></path>
          </svg>
        </div>
        <div>
          <h3 class="mb-1 text-sm font-medium text-gray-500">Phone</h3>
          <p class="text-sm font-semibold text-gray-900">(555)-323-4558</p>
        </div>
      </div>

      <!-- Address Card -->
      <div class="flex items-center gap-4 rounded-2xl bg-white p-6 shadow-md">
        <div class="flex h-16 w-16 shrink-0 items-center justify-center rounded-2xl bg-teal-100">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-8 w-8 text-teal-600"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
            ></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
        </div>
        <div>
          <h3 class="mb-1 text-sm font-medium text-gray-500">Address</h3>
          <p class="text-sm font-semibold text-gray-900">1234 Divi St. #1000</p>
          <p class="text-sm font-semibold text-gray-900">San Francisco, CA 94220</p>
        </div>
      </div>
    </div>

    <!-- Bottom Row: Visit Section & Hours -->
    <div class="grid grid-cols-1 items-start gap-8 lg:grid-cols-[1fr_auto]">
      <!-- Left: Visit Section & Map -->
      <div>
        <h2 class="mb-6 text-4xl font-bold text-gray-900 md:text-5xl">
          Visit our office or warehouse!
        </h2>
        <p class="mb-8 leading-relaxed text-gray-600">
          Praesent sapien lacus, molestie vitae arcu in, elementum congue justo. Aenean aliquam
          semper velit eu pretium. Suspendisse mattis luctus quam nec vehicula. Donec scelerisque
          tristique metus a vestibulum.
        </p>
        <a
          href="#"
          class="mb-8 inline-block rounded-full border-2 border-orange-400 px-8 py-3 text-sm font-medium text-orange-400 transition-colors hover:bg-orange-400 hover:text-white"
        >
          GET DIRECTIONS
        </a>

        <!-- Map Skeleton -->
        <div
          class="mt-8 flex aspect-video w-full animate-pulse items-center justify-center rounded-3xl bg-gray-200"
        >
          <span class="text-lg text-gray-400">Map Coming Soon</span>
        </div>
      </div>

      <!-- Right: Opening Hours Card (Narrower) -->
      <div class="w-full rounded-3xl bg-teal-900 p-8 text-white shadow-lg lg:w-80">
        <div
          class="mb-6 inline-block rounded-full bg-orange-500 px-4 py-1 text-xs font-semibold tracking-wide uppercase"
        >
          Hours
        </div>

        <div class="space-y-6">
          <div>
            <h3 class="mb-2 text-xl font-semibold">Monday - Friday</h3>
            <p class="text-teal-200">9am - 5pm</p>
          </div>

          <div>
            <h3 class="mb-2 text-xl font-semibold">Saturdays</h3>
            <p class="text-teal-200">11am - 5pm</p>
          </div>

          <div>
            <h3 class="mb-2 text-xl font-semibold">Sundays</h3>
            <p class="text-teal-200">9am - 3pm</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  h2 {
    font-family: 'RacingSansOne', var(--font-sans);
  }
</style>
