---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';

// Images
import seatImage from '@/assets/seat.jpg';
import customizationImage from '@/assets/customization.jpg';
import repairImage from '@/assets/repair.jpg';
import upholsteryImage from '@/assets/upholstery.jpg';
import businessInNumbersImage from '@/assets/business-in-numbers.jpg';
import vanImage from '@/assets/van.jpg';

// Data
const whatWeDoItems = [
  {
    title: 'Upholstery',
    description:
      'We deliver quality car leather seats and interiors at affordable prices. Transform your car with our beautiful handiwork.',
    imageUrl: upholsteryImage,
  },
  {
    title: 'Customization',
    description:
      'Along with a vast range of quality leather, we also offer personalization details such as custom embroidery and bespoke designs.',
    imageUrl: customizationImage,
  },
  {
    title: 'Repair',
    description:
      "Do you have a rip in your car seat, or a sagging roof? Whether it's time to refresh or restore your car interiors, we are fully dedicated to your needs.",
    imageUrl: repairImage,
  },
];

const businessStats = [
  {
    statistic: '18',
    description: 'years in business',
  },
  {
    statistic: '21',
    description: 'experts working',
  },
  {
    statistic: '100%',
    description: 'satisfied customers',
  },
];

const whyReasons = [
  'Passionate about what we do',
  'Creative in our designs',
  'Quality and service oriented',
  'Reliable and always delivering the best for your car',
];
---

<BaseLayout>
  <!-- Hero Banner -->
  <section class="grid grid-cols-1 sm:grid-cols-2">
    <!-- Image Column - Order 2 on mobile, 1 on desktop -->
    <div class="order-2 sm:order-1">
      <Image src={seatImage} alt="Five Star Auto Leather" class="h-full w-full object-cover" />
    </div>

    <!-- Text Column - Order 1 on mobile, 2 on desktop -->
    <div class="order-1 flex items-center justify-center bg-black px-4 py-9 sm:order-2 sm:px-20">
      <div class="flex h-full flex-col justify-center text-center sm:items-start sm:text-left">
        <h1 class="text-4xl font-bold text-white">Five Star Auto Leather</h1>

        <p class="mt-2 text-white">
          Custom Automotive Interiors | Quality Workmanship | Five Star Service since 2005
        </p>

        <a
          href="#contact"
          class="mt-8 inline-block w-36 rounded bg-blue-600 px-4 py-2 text-center text-white transition-colors hover:bg-blue-700"
        >
          Get in Touch
        </a>
      </div>
    </div>
  </section>

  <!-- What We Do -->
  <section class="container mx-auto max-w-7xl px-6 py-12">
    <div class="flex w-full flex-col items-center gap-6">
      <h2 class="text-3xl font-bold">What We Do</h2>

      <div class="grid w-full grid-cols-1 gap-3 sm:grid-cols-3">
        {
          whatWeDoItems.map((item) => (
            <div class="flex flex-col items-center">
              <Image
                src={item.imageUrl}
                alt={item.title}
                class="h-auto w-full max-w-[350px] object-cover"
              />
              <h3 class="mt-4 text-xl font-semibold">{item.title}</h3>
              <p class="mt-2 text-center">{item.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Business In Numbers -->
  <section
    class="relative bg-cover bg-center bg-no-repeat sm:bg-fixed"
    style={`background-image: url(${businessInNumbersImage.src})`}
  >
    <!-- Overlay -->
    <div class="absolute inset-0 z-0 bg-black/70"></div>

    <!-- Content -->
    <div class="relative z-10 container mx-auto max-w-7xl px-6 py-14 text-center">
      <div class="flex w-full flex-col items-center gap-6">
        <h2 class="text-3xl font-bold text-white">Our Business in Numbers</h2>

        <div class="grid w-full grid-cols-3 gap-3">
          {
            businessStats.map((item) => (
              <div class="flex flex-col items-center">
                <p class="text-2xl font-bold text-white sm:text-5xl">{item.statistic}</p>
                <p class="text-white">{item.description}</p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Why You'll Love Us -->
  <section class="grid grid-cols-1 sm:grid-cols-12">
    <!-- Image Column - Order 2 on mobile, 1 on desktop -->
    <div class="order-2 sm:order-1 sm:col-span-5">
      <Image src={vanImage} alt="Van" class="h-full w-full object-cover" />
    </div>

    <!-- Text Column - Order 1 on mobile, 2 on desktop -->
    <div class="order-1 flex items-center px-4 py-9 sm:order-2 sm:col-span-7 md:px-20">
      <div class="flex h-full flex-col justify-center">
        <h2 class="mb-6 text-center text-3xl font-bold sm:text-left">Why You'll Love Us</h2>
        <p class="mb-2">
          Committed to your needs, we want you to feel the love that we have for our work. Come
          visit us, and we will show you that we are:
        </p>
        <ul class="space-y-2">
          {
            whyReasons.map((reason) => (
              <li class="flex items-start gap-2">
                <Icon name="mdi:check" class="mt-0.5 h-4 w-4 shrink-0 text-red-500" />
                <span>{reason}</span>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </section>

  <div id="contact"></div>
</BaseLayout>
