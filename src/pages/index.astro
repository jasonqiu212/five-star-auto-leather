---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';

import seatImage from '@/assets/seat.jpg';
import customizationImage from '@/assets/customization.jpg';
import repairImage from '@/assets/repair.jpg';
import upholsteryImage from '@/assets/upholstery.jpg';
import businessInNumbersImage from '@/assets/business-in-numbers.jpg';
import vanImage from '@/assets/van.jpg';

const whatWeDoItems = [
  {
    title: 'Upholstery',
    description:
      'We craft tailored car leather seats and interiors with exceptional attention to detail.',
    imageUrl: upholsteryImage,
  },
  {
    title: 'Customization',
    description:
      'Along with a vast range of quality leather, we also offer bespoke designs and personalisation details.',
    imageUrl: customizationImage,
  },
  {
    title: 'Repair',
    description:
      'Be it a sagging roof lining or a cracked dashboard, we have the solution to all your car interior needs.',
    imageUrl: repairImage,
  },
];

const businessStats = [
  {
    statistic: '20',
    description: 'years in business',
  },
  {
    statistic: '21',
    description: 'experts working',
  },
  {
    statistic: '100%',
    description: 'satisfied customers',
  },
];

const whyReasons = [
  'Obsessed with our craft',
  'Bold an creative in every design',
  'Driven by quality and top-tier service',
  'Trusted to deliver nothing less than the best for your ride',
];
---

<BaseLayout>
  <!-- Hero Banner -->
  <section class="grid grid-cols-1 sm:grid-cols-2">
    <div class="order-2 sm:order-1">
      <Image
        src={seatImage}
        alt="Five Star Auto Leather"
        class="h-full w-full bg-black object-cover"
      />
    </div>

    <div class="order-1 flex items-center justify-center bg-black px-6 py-8 sm:order-2 sm:px-16">
      <div
        class="slide-up flex h-full flex-col items-center justify-center text-center sm:items-start sm:text-left"
      >
        <h1 class="text-4xl font-bold text-white">Five Star Auto Leather</h1>

        <p class="mt-2 text-white">
          Custom Automotive Interiors | Quality Workmanship | Five Star Service since 2005
        </p>

        <a
          href="#contact"
          class="mt-8 inline-block w-36 rounded bg-red-500 px-4 py-2 text-center text-sm font-medium text-white transition-colors hover:bg-red-700"
        >
          Get in Touch
        </a>
      </div>
    </div>
  </section>

  <!-- What We Do -->
  <section class="container mx-auto max-w-7xl px-6 py-8">
    <div class="flex w-full flex-col items-center gap-6">
      <h2 class="text-2xl font-bold">What We Do</h2>

      <div class="grid w-full grid-cols-1 gap-3 sm:grid-cols-3">
        {
          whatWeDoItems.map((item) => (
            <div class="flex flex-col items-center">
              <Image
                src={item.imageUrl}
                alt={item.title}
                class="h-auto w-full max-w-[350px] object-cover"
              />
              <h3 class="mt-4 text-xl font-bold">{item.title}</h3>
              <p class="mt-2 text-center">{item.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Business In Numbers -->
  <section
    class="relative bg-cover bg-center bg-no-repeat sm:bg-fixed"
    style={`background-image: url(${businessInNumbersImage.src})`}
  >
    <!-- Overlay -->
    <div class="absolute inset-0 z-0 bg-black/70"></div>

    <!-- Content -->
    <div class="relative z-10 container mx-auto max-w-7xl px-6 py-14 text-center">
      <div class="flex w-full flex-col items-center gap-6">
        <h2 class="text-2xl font-bold text-white">Our Business in Numbers</h2>

        <div class="grid w-full grid-cols-3 gap-3">
          {
            businessStats.map((item) => (
              <div class="flex flex-col items-center">
                <p class="text-3xl font-bold text-white sm:text-4xl">{item.statistic}</p>
                <p class="mt-2 text-white">{item.description}</p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Why You'll Love Us -->
  <section class="grid grid-cols-1 sm:grid-cols-12">
    <div class="order-2 sm:order-1 sm:col-span-5">
      <Image src={vanImage} alt="Van" class="h-full w-full object-cover" />
    </div>

    <div class="order-1 flex items-center px-6 py-9 sm:order-2 sm:col-span-7 md:px-20">
      <div class="flex h-full flex-col justify-center">
        <h2 class="mb-6 text-center text-2xl font-bold sm:text-left">Why You'll Love Us</h2>
        <p class="mb-2">
          We're all about passion, precision, and that perfect finish. Drop by and see why our team
          is:
        </p>
        <ul class="space-y-2">
          {
            whyReasons.map((reason) => (
              <li class="flex items-center gap-2">
                <Icon name="mdi:check" class="h-4 w-4 shrink-0 text-red-500" />
                <span>{reason}</span>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .slide-up {
    animation: slideUp 0.8s ease-out;
  }
</style>
